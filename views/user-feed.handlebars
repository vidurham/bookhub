<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- fontawesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <!-- bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous"/>
    <!-- main style -->
    <link rel="stylesheet" href="/css/style.css" />
    <title>BookHub-Homepage</title>
  </head>
  <body class="feed-background bg-gray postion-relative">
    <!-- +++++++++ Nav bar +++++++++ -->
    <nav class="d-flex align-items-center fixed-top shadow bg-white nav-bar">
      <div class="container-fluid">
        <div class="row align-items-center">
          <!-- Search Container -->
          <section class="col d-flex align-items-center">
            <!-- BookHub logo -->
            <i class="fa-solid fa-book-bookmark text-success fs-3rem"></i>
            <!-- search bar -->
            <div class="input-group ms-2" type="button">
              <!-- mobile -->
              <span class="input-group-prepend d-sm-none" id="searchMenu" data-bs-toggle="dropdown" aria-expanded="false" data-bs-auto-close="outside">
                <div class="input-group-text bg-warning border-0 rounded-circle search-height">
                  <i class="fas fa-search text-success"></i>
                </div>
              </span>
              <!-- desktop -->
              <span class="input-group-prepend d-sm-block d-none" id="searchMenu" data-bs-toggle="dropdown" aria-expanded="false" data-bs-auto-close="outside">
                <div class="input-group-text bg-warning border-0 rounded-pill search-height">
                  <i class="fas fa-search me-2 text-success"></i>
                  <p class="m-0 fs-p8rem fw-bold text-success">Search BookHub</p>
                </div>
              </span>
              <!-- search menu -->
              <ul class="dropdown-menu overflow-auto border-0 shadow p-3" aria-labelledby="searchMenu" style="width: 20em; max-height: 600px">
                <!-- search input -->
                <li>
                  <input type="text" class=" border-0 rounded-pill dropdown-item bg-warning " placeholder="Search BookHub..." autofocus/>
                </li>
              </ul>
            </div>
          </section>
          <!-- menus -->
          <div class="col d-flex align-items-center justify-content-end">
            <!-- avatar -->
            <div
              class="align-items-center justify-content-center d-none d-sm-flex"
            >
              <img
                src="/assets/images/nerd-emoji.png"
                class="rounded-circle me-2"
                alt="avatar"
                style="width: 38px; height: 38px; object-fit: cover"
              />
              <p class="m-0">John Doe</p>
            </div>
            <!-- secondary menu -->
            <div
              class="
                rounded-circle
                p-1
                bg-white
                d-flex
                align-items-center
                justify-content-center
                mx-2
              "
              style="width: 38px; height: 38px"
              type="button"
              id="secondMenu"
              data-bs-toggle="dropdown"
              aria-expanded="false"
              data-bs-auto-close="outside"
            >
              <i class="fas fa-caret-down"></i>
            </div>
            <!-- secondary menu dd -->
            <ul
              class="dropdown-menu border-0 shadow p-3"
              aria-labelledby="secondMenu"
              style="width: 23em"
            >
              <!-- avatar -->
              <li class="dropdown-item p-1 rounded d-flex" type="button">
                <img
                  src="/assets/images/nerd-emoji.png"
                  alt="avatar"
                  class="rounded-circle me-2"
                  style="width: 45px; height: 45px; object-fit: cover"
                />
                <div>
                  <p class="m-0">John Doe</p>
                  <p class="m-0 text-muted">Your profile</p>
                </div>
              </li>
              <!-- 4 -->
              <li class="dropdown-item p-1 my-3 rounded" type="button">
                <ul class="navbar-nav">
                  <li class="nav-item">
                    <a
                      href="#"
                      class="d-flex text-decoration-none text-dark"
                    >
                      <i class="fas fa-cog bg-white p-2 rounded-circle"></i>
                      <div
                        class="
                          ms-3
                          d-flex
                          justify-content-between
                          align-items-center
                          w-100
                        "
                      >
                        <p class="m-0">Log Out</p>
                      </div>
                    </a>
                  </li>
                </ul>
              </li>
            </ul>
            <!-- end -->
          </div>
        </div>
      </div>
    </nav>
    <!-- ++++++++++ Main ++++++++++ -->
    <div class="container-fluid">
      <div class="row justify-content-evenly">
        <!-- ++++++++++ Left side ++++++++++ -->
        <div class="col-12 col-lg-3">
          <div
            class="d-none d-lg-block h-100 fixed-top overflow-hidden"
            style="max-width: 360px; width: 100%; z-index: 4"
          >
            <ul
              class="navbar-nav mt-4 ms-3 d-flex flex-column pb-5 mb-5"
              style="padding-top: 56px"
            >
              <!-- top -->
              <!-- avatar -->
              <li class="dropdown-item p-1 rounded">
                <a
                  href="#"
                  class="
                    d-flex
                    align-items-center
                    text-decoration-none text-dark
                  "
                >
                  <div class="p-2">
                    <img
                      src="/assets/images/nerd-emoji.png"
                      alt="avatar"
                      class="rounded-circle me-2"
                      style="width: 38px; height: 38px; object-fit: cover"
                    />
                  </div>
                  <div>
                    <p class="m-0">John Doe</p>
                  </div>
                </a>
              </li>
              <!-- top 1 -->
              <li class="dropdown-item p-1 rounded">
                <a
                  href="#"
                  class="
                    d-flex
                    align-items-center
                    text-decoration-none text-dark
                  "
                >
                  <div class="p-2">
                    <i class="fa-solid fa-user-group"></i>
                  </div>
                  <div>
                    <p class="m-0">Friends</p>
                  </div>
                </a>
              </li>
              <!-- top 2 -->
              <li class="dropdown-item p-1 rounded">
                <a
                  href="#"
                  class="
                    d-flex
                    align-items-center
                    text-decoration-none text-dark
                  "
                >
                  <div class="p-2">
                    <i class="fa-solid fa-book"></i>
                  </div>
                  <div>
                    <p class="m-0">Book Clubs</p>
                  </div>
                </a>
              </li>
              <!-- top 3 -->
          </div>
        </div>
        <!-- ++++++++++ Feed ++++++++++ -->
        <div class="col-12 col-lg-6 pb-5">
          <div
            class="d-flex flex-column justify-content-center w-100 mx-auto"
            style="padding-top: 56px; max-width: 680px"
          >
            <!-- discussions -->
            <div class="mt-5 d-flex justify-content-between position-relative">
              <!-- s 1 -->
              <div
                class="mx-1 bg-white rounded discussion"
                type="button"
                style="width: 6em; height: 190px"
              >
                <img
                  src="/assets/images/book-stack.png"
                  class="card-img-top"
                  alt="discussion posts"
                  style="min-height: 125px; object-fit: cover"
                />
                <div
                  class="
                    d-flex
                    align-items-center
                    justify-content-center
                    position-relative
                  "
                  style="min-height: 65px"
                >
                  <p class="mb-0 text-center fs-p8rem fw-bold">Create A Discussion</p>
                  <div
                    class="position-absolute top-0 start-50 translate-middle"
                  >
                    <i
                      class="
                        fas
                        fa-plus-circle
                        fs-3
                        text-success
                        bg-white
                        p-1
                        rounded-circle
                      "
                    ></i>
                  </div>
                </div>
              </div>
              <!-- s 2 -->
              <div
                class="rounded mx-1 discussion"
                type="button"
                style="width: 6em; height: 190px"
              >
                <img
                  src="/assets/images/history-book.png"
                  class="card-img-top rounded"
                  alt="discussion posts"
                  style="min-height: 190px; object-fit: cover"
                />
              </div>
              <!-- s 3 -->
              <div
                class="rounded mx-1 discussion"
                type="button"
                style="width: 6em; height: 190px"
              >
                <img
                  src="/assets/images/stephen-king-memoir.png"
                  class="card-img-top rounded"
                  alt="discussion posts"
                  style="min-height: 190px; object-fit: cover"
                />
              </div>
              <!-- s 4 -->
              <div
                class="rounded mx-1 discussion"
                type="button"
                style="width: 6em; height: 190px"
              >
                <img
                  src="/assets/images/coders.png"
                  class="card-img-top rounded"
                  alt="discussion posts"
                  style="min-height: 190px; object-fit: cover"
                />
              </div>
              <!-- s 5 -->
              <div
                class="d-none d-lg-block rounded mx-1 discussion"
                type="button"
                style="width: 6em; height: 190px"
              >
                <img
                  src="/assets/images/canterbury-tales.png"
                  class="card-img-top rounded"
                  alt="discussion posts"
                  style="min-height: 190px; object-fit: cover"
                />
              </div>
              <!-- s 6 -->
              <div
                class="d-none d-lg-block rounded mx-1 discussion"
                type="button"
                style="width: 6em; height: 190px"
              >
                <img
                  src="/assets/images/deep-work.png"
                  class="card-img-top rounded"
                  alt="discussion posts"
                  style="min-height: 190px; object-fit: cover"
                />
              </div>
            </div>
            <!-- create post -->
            <div class="bg-white p-3 mt-3 rounded border shadow">
              <!-- avatar -->
              <div class="d-flex" type="button">
                <div class="p-1">
                  <img
                    src="/assets/images/nerd-emoji.png"
                    alt="avatar"
                    class="rounded-circle me-2"
                    style="width: 38px; height: 38px; object-fit: cover"
                  />
                </div>
                <input
                  type="text"
                  class="form-control rounded-pill border-0 bg-white pointer"
                  disabled
                  placeholder="Share your thoughts on a book..."
                  data-bs-toggle="modal"
                  data-bs-target="#createModal"
                />
              </div>
              <!-- bootstrap modal -->
              <div
                class="modal fade"
                id="createModal"
                tabindex="-1"
                aria-labelledby="createModalLabel"
                aria-hidden="true"
                data-bs-backdrop="false"
              >
                <div class="modal-dialog modal-dialog-centered">
                  <div class="modal-content">
                    <!-- head -->
                    <div class="modal-header align-items-center">
                      <h5
                        class="text-dark text-center w-100 m-0"
                        id="exampleModalLabel"
                      >
                        Create Post
                      </h5>
                      <button
                        type="button"
                        class="btn-close"
                        data-bs-dismiss="modal"
                        aria-label="Close"
                      ></button>
                    </div>
                    <!-- body -->
                    <div class="modal-body">
                      <div class="my-1 p-1">
                        <div class="d-flex flex-column">
                          <!-- name -->
                          <div class="d-flex align-items-center">
                            <div class="p-2">
                              <img
                                src="/assets/images/nerd-emoji.png"
                                alt="from fb"
                                class="rounded-circle"
                                style="
                                  width: 38px;
                                  height: 38px;
                                  object-fit: cover;
                                "
                              />
                            </div>
                            <div>
                              <p class="m-0 fw-bold">John Doe</p>
                            </div>
                          </div>
                          <!-- text -->
                          <div>
                            <textarea
                              cols="30"
                              rows="5"
                              class="form-control border-0"
                            ></textarea>
                          </div>
                        </div>
                      </div>

                      <!-- end -->
                    </div>
                    <!-- footer -->
                    <div class="modal-footer">
                      <button type="button" class="btn btn-success w-100">
                        Post
                      </button>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <!-- ++++ FEED POST ++++ -->
            <div class="bg-white p-4 rounded shadow mt-3">
              <!-- author -->
              <div class="d-flex justify-content-between">
                <!-- avatar -->
                <div class="d-flex">
                  <img
                    src="/assets/images/nerd-emoji.png"
                    alt="avatar"
                    class="rounded-circle me-2"
                    style="width: 38px; height: 38px; object-fit: cover"
                  />
                  <div>
                    <p class="m-0 fw-bold">John Doe</p>
                    <span class="text-muted fs-p8rem">May 6 at 8:47 am</span>
                  </div>
                </div>
                <!-- edit -->
                <i
                  class="fas fa-ellipsis-h"
                  type="button"
                  id="post1Menu"
                  data-bs-toggle="dropdown"
                  aria-expanded="false"
                ></i>
                <!-- edit menu -->
                <ul
                  class="dropdown-menu border-0 shadow"
                  aria-labelledby="post1Menu"
                >
                  <li class="d-flex align-items-center">
                    <a
                      class="
                        dropdown-item
                        d-flex
                        justify-content-around
                        align-items-center
                        fs-p8rem
                      "
                      href="#"
                    >
                      Edit Post</a
                    >
                  </li>
                  <li class="d-flex align-items-center">
                    <a
                      class="
                        dropdown-item
                        d-flex
                        justify-content-around
                        align-items-center
                        fs-p8rem
                      "
                      href="#"
                    >
                      Delete Post</a
                    >
                  </li>
                </ul>
              </div>
              <!-- post content -->
              <div class="mt-3">
                <!-- content -->
                <div class="">
                  <p>
                    Lorem ipsum dolor sit amet consectetur adipisicing 
                    elit. Repellat officia perspiciatis ullam iusto voluptatum delectus illo ducimus provident error at hic doloremque 
                    eum commodi impedit, rerum repudiandae facere illum. Architecto.
                  </p>
                  <img
                    src="/assets/images/coders.png"
                    alt="post image"
                    class="img-fluid rounded"
                  />
                </div>
                <!-- likes & comments -->
                <div class="post__comment mt-3 position-relative">
                  <!-- likes -->
                  <div
                    class="
                      d-flex
                      align-items-center
                      top-0
                      start-0
                      position-absolute
                    "
                    style="height: 50px; z-index: 5"
                  >
                    <div class="me-2">
                      <i class="text-success fas fa-thumbs-up pointer"></i>
                    </div>
                    <p class="m-0 text-muted fs-p8rem pointer">7 likes</p>
                  </div>
                  <!-- comments start-->
                  <div class="accordion" id="accordionExample">
                    <div class="accordion-item border-0">
                      <!-- comment collapse -->
                      <h2 class="accordion-header" id="headingTwo">
                        <div
                          class="
                            accordion-button
                            collapsed
                            pointer
                            d-flex
                            justify-content-end
                          "
                          data-bs-toggle="collapse"
                          data-bs-target="#collapsePost1"
                          aria-expanded="false"
                          aria-controls="collapsePost1"
                        >
                          <p class="m-0">(#num) Comments</p>
                        </div>
                      </h2>
                      <hr />
                      <!-- comment & like bar -->
                      <div class="d-flex justify-content-around">
                        <div
                          class="
                            dropdown-item
                            rounded
                            d-flex
                            justify-content-center
                            align-items-center
                            pointer
                            text-muted
                            p-1
                          "
                        >
                          <i class="fas fa-thumbs-up me-3"></i>
                          <p class="m-0">Like</p>
                        </div>
                        <div
                          class="
                            dropdown-item
                            rounded
                            d-flex
                            justify-content-center
                            align-items-center
                            pointer
                            text-muted
                            p-1
                          "
                          data-bs-toggle="collapse"
                          data-bs-target="#collapsePost1"
                          aria-expanded="false"
                          aria-controls="collapsePost1"
                        >
                          <i class="fas fa-comment-alt me-3"></i>
                          <p class="m-0">Comment</p>
                        </div>
                      </div>
                      <!-- comment expand -->
                      <div
                        id="collapsePost1"
                        class="accordion-collapse collapse"
                        aria-labelledby="headingTwo"
                        data-bs-parent="#accordionExample"
                      >
                        <hr />
                        <div class="accordion-body">
                          <!-- comment 1 -->
                          <div class="d-flex align-items-center my-1">
                            <!-- avatar -->
                            <img
                              src="/assets/images/nerd-emoji.png"
                              alt="avatar"
                              class="rounded-circle me-2"
                              style="
                                width: 38px;
                                height: 38px;
                                object-fit: cover;
                              "
                            />
                            <!-- comment text -->
                            <div class="p-3 rounded comment__input w-100">
                              <!-- comment menu of author -->
                              <div class="d-flex justify-content-end">
                                <!-- icon -->
                                <i
                                  class="fas fa-ellipsis-h text-blue pointer"
                                  id="post1CommentMenuButton"
                                  data-bs-toggle="dropdown"
                                  aria-expanded="false"
                                ></i>
                                <!-- menu -->
                                <ul
                                  class="dropdown-menu border-0 shadow"
                                  aria-labelledby="post1CommentMenuButton"
                                >
                                  <li class="d-flex align-items-center">
                                    <a
                                      class="
                                        dropdown-item
                                        d-flex
                                        justify-content-around
                                        align-items-center
                                        fs-p8rem
                                      "
                                      href="#"
                                    >
                                      Edit Comment</a
                                    >
                                  </li>
                                  <li class="d-flex align-items-center">
                                    <a
                                      class="
                                        dropdown-item
                                        d-flex
                                        justify-content-around
                                        align-items-center
                                        fs-p8rem
                                      "
                                      href="#"
                                    >
                                      Delete Comment</a
                                    >
                                  </li>
                                </ul>
                              </div>
                              <p class="fw-bold m-0">John Doe</p>
                              <p class="m-0 fs-p8rem bg-white p-2 rounded">
                                Lorem ipsum dolor sit, amet consectetur adipisicing elit.
                              </p>
                            </div>
                          </div>
                          <!-- comment 2 -->
                          <div class="d-flex align-items-center my-1">
                            <!-- avatar -->
                            <img
                              src="https://source.unsplash.com/random/2"
                              alt="avatar"
                              class="rounded-circle me-2"
                              style="
                                width: 38px;
                                height: 38px;
                                object-fit: cover;
                              "
                            />
                            <!-- comment text -->
                            <div class="p-3 rounded comment__input w-100">
                              <p class="fw-bold m-0">Jerry</p>
                              <p class="m-0 fs-p8rem bg-white p-2 rounded">
                                Lorem ipsum dolor sit, amet consectetur adipisicing elit.
                              </p>
                            </div>
                          </div>
                          <!-- create comment -->
                          <form class="d-flex my-1">
                            <!-- avatar -->
                            <div>
                              <img
                                src="/assets/images/nerd-emoji.png"
                                alt="avatar"
                                class="rounded-circle me-2"
                                style="
                                  width: 38px;
                                  height: 38px;
                                  object-fit: cover;
                                "
                              />
                            </div>
                            <!-- input -->
                            <input
                              type="text"
                              class="form-control border-0 rounded-pill bg-white"
                              placeholder="Write a comment"
                            />
                          </form>
                          <!-- end -->
                        </div>
                      </div>
                    </div>
                  </div>
                  <!-- end -->
                </div>
              </div>
            </div>
          </div>
        </div>
        <!-- ++++++++++ Right side ++++++++++ -->
        <div class="col-12 col-lg-3"></div>
      </div>
    </div>
  </body>
</html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- fontawesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <!-- bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous"/>
    <!-- main style -->
    <link rel="stylesheet" href="/css/style.css" />
    <title>BookHub-Homepage</title>
  </head>
  <body class="feed-background bg-gray">
    <!-- +++++++++ Nav bar +++++++++ -->
    <nav class="d-flex align-items-center fixed-top shadow bg-white nav-bar">
      <div class="container-fluid">
        <div class="row">
          <!-- Search Container -->
          <section class="col d-flex align-items-center">
            <!-- BookHub logo -->
            <i class="fa-solid fa-book-bookmark text-success fs-3rem"></i>
            <!-- search bar -->
            <div class="input-group ms-2">
              <div class="input-group-text bg-warning border-warning search-shape search-size">
                <i class="fas fa-search me-2 text-success"></i>
                <input id="searchBar" type="text" 
                class="border-0 bg-warning d-block m-0 fs-p8rem 
                fw-bold text-success input-size" 
                placeholder="Search BookHub"></input>
              </div>
            </div>
          </section>
          <!-- profile-items -->
          <section class="col d-flex align-items-center justify-content-end">
            <!-- profile-picture -->
            <div class="align-items-center justify-content-center d-none d-sm-flex">
              <img src="/assets/images/nerd-emoji.png" class="profile-picture rounded-circle me-2"
                alt="profile-picture" />
              <p class="m-0">John Doe</p>
            </div>
            <!-- user-menu -->
            <div class="rounded-circle p-1 bg-gray d-flex 
              align-items-center justify-content-center mx-2 user-dropdown-button"
              type="button" id="secondMenu" data-bs-toggle="dropdown"
              aria-expanded="false" data-bs-auto-close="outside">
              <i class="fas fa-caret-down"></i>
            </div>
            <!-- user-menu dropdown -->
            <ul class="dropdown-menu user-menu border-0 shadow p-3" aria-labelledby="secondMenu">
              <!-- Profile -->
              <li class="dropdown-item p-1 rounded d-flex" type="button">
                <img src="/assets/images/nerd-emoji.png" alt="profile-picture" class="profile-picture rounded-circle me-2"/>
                <div>
                  <p class="m-0">John Doe</p>
                  <p class="m-0 text-muted">Your profile</p>
                </div>
              </li>
              <!-- Friends -->
              <li class="dropdown-item p-1 rounded" type="button">
                <a href="#" class="d-flex align-items-center text-decoration-none text-dark">
                  <div class="p-2">
                    <i class="fa-solid fa-user-group"></i>
                  </div>
                  <div>
                    <p class="m-0">Friends</p>
                  </div>
                </a>
              </li>
              <!-- Book Clubs -->
              <li class="dropdown-item p-1 rounded" type="button">
                <a href="#" class="d-flex align-items-center text-decoration-none text-dark">
                  <div class="p-2">
                    <i class="fa-solid fa-book"></i>
                  </div>
                  <div>
                    <p class="m-0">Book Clubs</p>
                  </div>
                </a>
              </li>
              <!-- Log out -->
              <li class="dropdown-item p-1 rounded" type="button">
                <a href="./index.html" class="d-flex align-items-center text-decoration-none text-dark">
                  <div class="p-2">
                    <i class="fa-solid fa-arrow-right-from-bracket"></i>
                  </div>
                  <div>
                    <p class="m-0">Log Out</p>
                  </div>
                </a>
              </li>
            </ul>
          </section>
        </div>
      </div>
    </nav>
    <!-- ++++++++++ Main ++++++++++ -->
    <div class="container-fluid">
      <div class="row justify-content-evenly">
        <!-- ++++++++++ Left side ++++++++++ -->
        <div class="col-12 col-lg-3">
          <div class="left-bar-sizing d-none d-lg-block h-100 w-100 fixed-top overflow-hidden">
            <ul class="navbar-nav mt-4 ms-3 d-flex flex-column pb-5 mb-5 pt-5">
              <!-- profile-picture -->
              <li class="dropdown-item p-1 rounded">
                <a href="#" class="d-flex align-items-center text-decoration-none text-dark">
                  <div class="p-2">
                    <img src="/assets/images/nerd-emoji.png" alt="profile-picture" class="rounded-circle me-2 profile-picture"/>
                  </div>
                  <div>
                    <p class="m-0">John Doe</p>
                  </div>
                </a>
              </li>
              <!-- Friends -->
              <li class="dropdown-item p-1 rounded">
                <a href="#" class="d-flex align-items-center text-decoration-none text-dark">
                  <div class="p-2">
                    <i class="fa-solid fa-user-group"></i>
                  </div>
                  <div>
                    <p class="m-0">Friends</p>
                  </div>
                </a>
              </li>
              <!-- Book Clubs -->
              <li class="dropdown-item p-1 rounded">
                <a href="#" class="d-flex align-items-center text-decoration-none text-dark">
                  <div class="p-2">
                    <i class="fa-solid fa-book"></i>
                  </div>
                  <div>
                    <p class="m-0">Book Clubs</p>
                  </div>
                </a>
              </li>
          </div>
        </div>
        <!-- ++++++++++ Feed ++++++++++ -->
        <div class="col-12 col-lg-6 pb-5">
          <div class="feed-sizing d-flex flex-column justify-content-center w-100 mx-auto">
            <!-- discussions -->
            <div class="mt-5 d-flex justify-content-between position-relative">
              <!-- create a discussion button -->
              <div class=" mx-1 bg-white rounded discussion create-discussion" type="button">
                <img src="/assets/images/book-stack.png" class="card-img-top" alt="discussion posts"
                  style="min-height: 125px; object-fit: cover"/>
                <div class="d-flex align-items-center justify-content-center position-relative"
                  style="min-height: 65px">
                  <p class="mb-0 text-center fs-p8rem fw-bold">Create A Discussion</p>
                  <div class="position-absolute top-0 start-50 translate-middle">
                    <i class="fas fa-plus-circle fs-3 text-success bg-white p-1 rounded-circle"></i>
                  </div>
                </div>
              </div>
              <!-- discussion 2 -->
              <div class="rounded mx-1 discussion" type="button">
                <img src="/assets/images/history-book.png" class="card-img-top rounded"
                  alt="discussion posts" style="min-height: 190px; object-fit: cover"/>
              </div>
              <!-- discussion 3 -->
              <div class="rounded mx-1 discussion" type="button">
                <img src="/assets/images/stephen-king-memoir.png" class="card-img-top rounded" 
                alt="discussion posts" style="min-height: 190px; object-fit: cover"/>
              </div>
              <!-- discussion 4 -->
              <div class="rounded mx-1 discussion" type="button">
                <img src="/assets/images/coders.png" class="card-img-top rounded"
                alt="discussion posts" style="min-height: 190px; object-fit: cover"/>
              </div>
              <!-- discussion 5 -->
              <div class="d-none d-lg-block rounded mx-1 discussion" type="button">
                <img src="/assets/images/canterbury-tales.png" class="card-img-top rounded" 
                alt="discussion posts" style="min-height: 190px; object-fit: cover"/>
              </div>
              <!-- discussion 6 -->
              <div class="d-none d-lg-block rounded mx-1 discussion" type="button">
                <img src="/assets/images/deep-work.png" class="card-img-top rounded"
                  alt="discussion posts" style="min-height: 190px; object-fit: cover"/>
              </div>
            </div>
            <!-- create post -->
            <div class="bg-white p-3 mt-3 rounded border shadow">
              <!-- profile-picture -->
              <div class="d-flex" type="button">
                <div class="p-1">
                  <img src="/assets/images/nerd-emoji.png" alt="profile-picture" class="rounded-circle me-2 profile-picture"/>
                </div>
                <input type="text" class="form-control border-0 bg-white pointer"
                  disabled placeholder="Share your thoughts on a book."
                  data-bs-toggle="modal" data-bs-target="#postModal"/>
              </div>
              <!-- create post modal -->
              <div class="modal fade" id="postModal" tabindex="-1"
                aria-labelledby="createModalLabel" aria-hidden="true" data-bs-backdrop="false">
                <div class="modal-dialog modal-dialog-centered">
                  <div class="modal-content">
                    <!-- head -->
                    <div class="modal-header align-items-center">
                      <h5 class="text-dark text-center w-100 m-0">Create Post</h5>
                      <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <!-- body -->
                    <div class="modal-body">
                      <div class="my-1 p-1">
                        <div class="d-flex flex-column">
                          <!-- name -->
                          <div class="d-flex align-items-center">
                            <div class="p-2">
                              <img src="/assets/images/nerd-emoji.png" alt="from fb" 
                              class="create-post-modal rounded-circle"/>
                            </div>
                            <div>
                              <p class="m-0 fw-bold">John Doe</p>
                            </div>
                          </div>
                          <!-- text -->
                          <div>
                            <textarea cols="30" rows="5" class="form-control border-0"></textarea>
                          </div>
                        </div>
                      </div>
                      <!-- end -->
                    </div>
                    <!-- footer -->
                    <div class="modal-footer">
                      <button type="button" class="btn btn-success w-100">
                        Post
                      </button>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <!-- ++++ post ++++ -->
            <div class="bg-white p-4 rounded shadow mt-3">
              <!-- user -->
              <div class="d-flex justify-content-between">
                <!-- profile-picture -->
                <div class="d-flex">
                  <img src="/assets/images/nerd-emoji.png" alt="profile-picture" class="rounded-circle me-2 profile-picture"/>
                  <div>
                    <p class="m-0 fw-bold">John Doe</p>
                    <span class="text-muted fs-p8rem">May 6 at 8:47 am</span>
                  </div>
                </div>
                <!-- edit post dots -->
                <i class="fas fa-ellipsis-h" type="button" id="postMenu"
                  data-bs-toggle="dropdown" aria-expanded="false"></i>
                <!-- dropdown -->
                <ul class="dropdown-menu border-0 shadow" aria-labelledby="postMenu">
                  <!-- edit -->
                  <li class="d-flex align-items-center">
                    <a class="dropdown-item d-flex justify-content-around
                    align-items-center fs-p8rem" href="#"> Edit Post</a>
                  </li>
                  <!-- delete -->
                  <li class="d-flex align-items-center">
                    <a class="dropdown-item d-flex justify-content-around
                    align-items-center fs-p8rem" href="#">Delete Post</a>
                  </li>
                </ul>
              </div>
              <!-- post content -->
              <div class="mt-3">
                <!-- content -->
                <div>
                  <p> Lorem ipsum dolor sit amet consectetur adipisicing 
                    elit. Repellat officia perspiciatis ullam iusto voluptatum delectus illo ducimus provident error at hic doloremque 
                    eum commodi impedit, rerum repudiandae facere illum. Architecto.
                  </p>
                  <img src="/assets/images/coders.png" alt="post image"
                    class="img-fluid rounded"/>
                </div>
                <!-- likes/comments -->
                <div class="post__comment mt-3 position-relative">
                  <!-- likes -->
                  <div class="d-flex align-items-center top-0 start-0 
                  position-absolute likes-sizing">
                    <div class="me-2">
                      <i class="text-success fas fa-thumbs-up pointer"></i>
                    </div>
                    <p class="m-0 text-muted fs-p8rem pointer">7 likes</p>
                  </div>
                  <!-- comments -->
                  <div class="accordion" id="accordionExample">
                    <div class="accordion-item border-0">
                      <!-- comment accordion closed -->
                      <h2 class="accordion-header" id="commentsAccordion">
                        <div
                          class="accordion-button collapsed pointer d-flex justify-content-end"
                          data-bs-toggle="collapse" data-bs-target="#commentsDiv"
                          aria-expanded="false" aria-controls="commentsDiv">
                          <p class="m-0">3 Comments</p>
                        </div>
                      </h2>
                      <hr />
                      <!-- comment & like bar -->
                      <div class="d-flex justify-content-around">
                        <div class="dropdown-item rounded d-flex justify-content-center
                          align-items-center pointer text-muted p-1">
                          <i class="fas fa-thumbs-up me-3"></i>
                          <p class="m-0">Like</p>
                        </div>
                        <div
                          class="dropdown-item rounded d-flex justify-content-center
                          align-items-center pointer text-muted p-1"
                          data-bs-toggle="collapse" data-bs-target="#commentsDiv"
                          aria-expanded="false" aria-controls="commentsDiv">
                          <i class="fas fa-comment-alt me-3"></i>
                          <p class="m-0">Comment</p>
                        </div>
                      </div>
                      <!-- comment accordion open -->
                      <div id="commentsDiv" class="accordion-collapse collapse"
                        aria-labelledby="commentsAccordion"
                        data-bs-parent="#accordionExample"
                      >
                        <hr />
                        <div class="accordion-body">
                          <!-- comment 1 -->
                          <div class="d-flex align-items-center my-1">
                            <!-- profile-picture -->
                            <img src="/assets/images/nerd-emoji.png" alt="profile-picture" 
                              class="rounded-circle me-2 comments"/>
                            <!-- text content div -->
                            <div class="p-3 rounded comment__input w-100">
                              <div class="d-flex justify-content-end">
                                <!-- icon -->
                                <i class="fas fa-ellipsis-h text-blue pointer" id="commentEditMenu"
                                  data-bs-toggle="dropdown" aria-expanded="false"></i>
                                <!-- edit menu -->
                                <ul class="dropdown-menu border-0 shadow" aria-labelledby="commentEditMenu" >
                                  <li class="d-flex align-items-center">
                                    <a class="dropdown-item d-flex justify-content-around
                                        align-items-center fs-p8rem" href="#">Edit Comment</a>
                                  </li>
                                  <li class="d-flex align-items-center">
                                    <a class="dropdown-item d-flex justify-content-around
                                        align-items-center fs-p8rem" href="#">Delete Comment</a>
                                  </li>
                                </ul>
                              </div>
                              <p class="fw-bold m-0">John Doe</p>
                              <p class="m-0 fs-p8rem bg-white p-2 rounded">
                                Lorem ipsum dolor sit, amet consectetur adipisicing elit.
                              </p>
                            </div>
                          </div>
                          <!-- comment 2 -->
                          <div class="d-flex align-items-center my-1">
                            <!-- profile-picture -->
                            <img src="/assets/images/default-user-picture.png" alt="profile-picture"
                              class="rounded-circle me-2 comments"/>
                            <!-- text content div -->
                            <div class="p-3 rounded comment__input w-100">
                              <p class="fw-bold m-0">Jerry</p>
                              <p class="m-0 fs-p8rem bg-white p-2 rounded">
                                Lorem ipsum dolor sit, amet consectetur adipisicing elit.
                              </p>
                            </div>
                          </div>
                          <!-- create comment -->
                          <form class="d-flex my-1">
                            <!-- profile-picture -->
                            <div>
                              <img src="/assets/images/nerd-emoji.png" alt="profile-picture"
                                class="rounded-circle me-2c comments"/>
                            </div>
                            <!-- input -->
                            <input type="text"  placeholder="Write a comment" 
                            class="form-control border-0 rounded-pill bg-white"/>
                          </form>
                          <!-- end -->
                        </div>
                      </div>
                    </div>
                  </div>
                  <!-- end -->
                </div>
              </div>
            </div>
          </div>
        </div>
        <!-- ++++++++++ Right side ++++++++++ -->
        <div class="col-12 col-lg-3"></div>
      </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
  </body>
</html>
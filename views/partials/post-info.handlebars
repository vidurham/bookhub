<!-- ++++ post ++++ -->
<div class="bg-white p-4 rounded shadow mt-3">
    <!-- user -->
    <div class="d-flex justify-content-between">
    <!-- profile-picture -->
    <div class="d-flex">
        <img src="/assets/images/nerd-emoji.png" alt="profile-picture" class="rounded-circle me-2 profile-picture"/>
        <div>
        <p class="m-0 fw-bold">{{user.first_name}} {{user.last_name}}</p>
        <span class="text-muted fs-p8rem">{{format_date created_at}}</span>
        </div>
    </div>
    <!-- edit post dots -->
    <i class="fas fa-ellipsis-h" type="button" id="postMenu"
        data-bs-toggle="dropdown" aria-expanded="false"></i>
    <!-- dropdown -->
    <ul class="dropdown-menu border-0 shadow" aria-labelledby="postMenu">
        <!-- edit -->
        <li class="d-flex align-items-center">
        <a class="dropdown-item d-flex justify-content-around
        align-items-center fs-p8rem" href="#"> Edit Post</a>
        </li>
        <!-- delete -->
        <li class="d-flex align-items-center">
        <a class="dropdown-item d-flex justify-content-around
        align-items-center fs-p8rem" href="#">Delete Post</a>
        </li>
    </ul>
    </div>
    <!-- post content -->
    <div class="mt-3">
    <!-- content -->
    <div>
        <h2> 
            {{title}}
        </h2>
        <p>
            {{post_content}}
        </p>
        <img src="/assets/images/coders.png" alt="post image"
        class="img-fluid rounded ml-5"/>
    </div>
    <!-- likes/comments -->
    <div class="post__comment mt-3 position-relative">
        <!-- likes -->
        <div class="d-flex align-items-center top-0 start-0 
        position-absolute likes-sizing">
        <div class="me-2">
            <i class="text-success fas fa-thumbs-up pointer"></i>
        </div>
        <p class="m-0 text-muted fs-p8rem pointer">4 likes</p>
        </div>
        <!-- comments -->
        <div class="accordion" id="accordionExample">
        <div class="accordion-item border-0">
            <!-- comment accordion closed -->
            <h2 class="accordion-header" id="commentsAccordion">
            <div
                class="accordion-button collapsed pointer d-flex justify-content-end"
                data-bs-toggle="collapse" data-bs-target="#commentsDiv"
                aria-expanded="false" aria-controls="commentsDiv">
                <p class="m-0">{{comments.length}} {{format_plural "comment" comments.length}}</p>
            </div>
            </h2>
            <hr />
            <!-- comment & like bar -->
            <div class="d-flex justify-content-around">
                <div class="dropdown-item rounded d-flex justify-content-center
                    align-items-center pointer text-muted p-1">
                    <i class="fas fa-thumbs-up me-3"></i>
                    <p class="m-0">Like</p>
                </div>
                <div
                    class="dropdown-item rounded d-flex justify-content-center
                    align-items-center pointer text-muted p-1"
                    data-bs-toggle="collapse" data-bs-target="#commentsDiv"
                    aria-expanded="false" aria-controls="commentsDiv">
                    <i class="fas fa-comment-alt me-3"></i>
                    <p class="m-0">Comment</p>
                </div>
            </div>
            <!-- comment accordion open -->
            <div id="commentsDiv" class="accordion-collapse collapse"
            aria-labelledby="commentsAccordion"
            data-bs-parent="#accordionExample"
            >
            <hr />
                <div class="accordion-body">
                    {{#each comments as |comment|}}
                            {{> comment-info comment}}
                    {{/each}}
                    <a href="/user-feed/{{id}}"><button class="btn btn-success w-100">Add a Comment</button><a></a>
                </div>
            </div>
        </div>
        </div>
        <!-- end -->
    </div>
    </div>
</div>

